/ {
    leds {
        compatible = "gpio-leds";
        red_led: led_1 {
            gpios = <&expansion_port 4 GPIO_ACTIVE_LOW>;
        };
        green_led: led_2 {
            gpios = <&expansion_port 3 GPIO_ACTIVE_LOW>;
        };
        blue_led: led_3 {
            gpios = <&expansion_port 2 GPIO_ACTIVE_LOW>;
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&expansion_port 25 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
    };

    idle_gpios {
        compatible = "gpio-leds";
        nand_cs: nand_cs {
            gpios = <&expansion_port  9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
    };

    /** @TODO: Add Piezo Beeper */
    /** @TODO: Add Serial Flash */
    
    aliases {
		sw0 = &button0;
		led0 = &blue_led;
		led1 = &green_led;
		led2 = &blue_led;
    };
};

&arduino_i2c {
    status = "okay";

    tph: DPS310@76 {
		compatible = "infineon,dps310";
		reg = <0x76>;
	};

    /** @FIXME: Add LTR329 */

	accelerometer: mc34x9@4c {
		compatible = "memsic,mc34x9";
		reg = <0x4c>;
	};
};
